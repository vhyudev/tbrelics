   <body style="height: 100%;">
	   <fieldset class="layui-elem-field"  style="border:0px;height: 100px;">
	       <!--<legend>搜索信息</legend>-->
	       <div style="margin: 10px 40px 0px;">
	           <form class="layui-form layui-form-pane" action="">
