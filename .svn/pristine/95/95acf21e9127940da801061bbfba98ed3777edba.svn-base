		 			});
		 			/* //日期范围
		 			laydate.render({
		 			  elem: '#test6'
		 			  ,range: true
		 			}); */
		 			});
		 	</script>
		 	
		 	<script>
		 layui.use('laydate', function(){
		 	 var $ = layui.jquery,
		        laydate = layui.laydate;
		   
		   //日期范围
		   laydate.render({
		     elem: '#test6'
		     ,range: true
		   });
		   
		 });
		 </script>
		<script>
		layui.use('table', function(){
			/* var $ = layui.jquery, */
		  var table = layui.table;
		  
		 
		  //监听行工具事件
		  table.on('tool(test)', function(obj){
		    var data = obj.data;
		    //console.log(obj)
		     if(obj.event === 'detail'){
		      layer.msg('ID：'+ data.id + ' 的查看操作');
		    } else if(obj.event === 'del'){
		      layer.confirm('确定删除?', function(index){
		        obj.del();
		        layer.close(index);
		      });
		    } else if(obj.event === 'edit'){
		      /* layer.alert('编辑行：<br>'+ JSON.stringify(data)) */
					var index = layui.layer.open({
					skin: 'demo-class',
					area: ['800px', '440px'],
					title : "信息查看",
					type : 2,
					content : "zzbj.html",});	
		    }
		  });
		});
		</script>
       <script type="text/javascript" src="../../../lib/echarts/echarts.min.js"></script>
       <script type="text/javascript">
       			var dom = document.getElementById("container");
       			var myChart = echarts.init(dom);
       			var app = {};
       			option = null;
       			option = {
       				title: {
       					text: '藏品提用动态统计'
       				},
       				tooltip: {
       					trigger: 'axis'
       				},
       				legend: {
       					data: ['出库藏品', '入库藏品']
       				},
       				grid: {
       					left: '3%',
       					right: '4%',
       					bottom: '3%',
       					containLabel: true
       				},
       				toolbox: {
       					feature: {
       						saveAsImage: {}
       					}
       				},
       				xAxis: {
       					type: 'category',
       					boundaryGap: false,
       					data: ['10.27', '10.28', '10.29', '10.30', '10.31', '11.01', '11.02']
       				},
       				yAxis: {
       					type: 'value'
       				},
       				series: [{
       						name: '出库藏品',
       						type: 'line',
       						stack: '总量',
       						data: [2, 3, 1, 3, 4, 3, 2]
       					},
       					{
       						name: '入库藏品',
       						type: 'line',
       						stack: '总量',
       						data: [2, 1, 4, 3, 2, 3, 1]
       					}
       				]
       			};
       
       			;
       			if (option && typeof option === "object") {
       				myChart.setOption(option, true);
       			}
       		</script>
